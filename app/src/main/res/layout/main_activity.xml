<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">
    <include
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        layout="@layout/toolbar"/>
    
    <com.kontakt.sample.ui.KenBurnsNetImageView
        android:layout_weight="1"
        android:id="@+id/banner"
        android:layout_width="fill_parent"
        android:layout_height="match_parent" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:divider="@android:drawable/divider_horizontal_bright"
        android:dividerPadding="1dp"
        android:showDividers="middle">


        <Button
            android:layout_weight="1"
            android:layout_margin="0dp"
            android:padding="22dp"
            android:id="@+id/range_beacons"
            android:text="@string/achievements"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            android:layout_weight="1"
            android:layout_margin="0dp"
            android:padding="22dp"
            android:id="@+id/monitor_beacons"
            android:text="@string/monitor_beacons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            android:layout_weight="1"
            android:layout_margin="0dp"
            android:padding="22dp"
            android:id="@+id/background_scan"
            android:textSize="16sp"
            android:background="@drawable/button_green"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/foreground_background_scan_on"/>
    </LinearLayout>
</LinearLayout>